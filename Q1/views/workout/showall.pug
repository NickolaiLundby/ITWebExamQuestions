extends ../layout

block content
    header(class='w3-container w3-padding-32 w3-center w3-black')
        div(class='w3-padding-large' id='main')
            h1(class='w3-jumbo')= title
            table(class='w3-table w3-striped w3-centered w3-bordered w3-border')
                each wo in workouts
                    tr
                        td
                            a(href=`/workout/${wo._id}` class='w3-text-grey') 
                                p(class='w3-wide') #{wo.title}
extends ../layout

block content
  div(class='w3-padding-large' id='main')
    header(class='w3-container w3-padding-32 w3-center w3-black')
      h1(class='w3-jumbo')= title
      p Log and monitor your workout activity
      table(class='w3-table w3-striped w3-centered w3-bordered w3-border')
                tr
                    th Workout
                    th Date
                    th Comment
                if (activities.length)
                  each act in activities
                    tr(class='w3-text-grey')
                        td
                            p(class='w3-wide') #{act.workout}
                        td
                            p(class='w3-wide') #{act.date}
                        td
                            p(class='w3-wide') #{act.comment}
      br
      h2(class='w3-text-light-grey') Add activity
      br
      form(action='/activity', method='post')
          select(name="workout")
            each wo in workouts
                option=wo.title
          p Comment:
          input(type='text' name='comment' placeholder='My comment')
          p Date:
          input(type='text' name='date' placeholder='01-01-2019')
          br
          br
          input(type='submit' value="Create")